MDScreen:
    name:'signup'
    id:signup
    MDFloatLayout:
        md_bg_color:1,1,1,1
        MDIconButton:
            icon:"chevron-left"
            user_font_size:"35sp"
            on_press:app.signup_back_login()
            pos_hint:{"center_y": .95}
        MDLabel:
            text:"Back"
            font_size:"18sp"
            #font_name:"Poppins.Regular.ttf"
            pos_hint:{"center_x": .615,"center_y":.949}
            
        Image:
            source:"Glassy/resources/glassy_log.png"
            size_hint: .26, .26
            pos_hint:{"center_x": .22,"center_y":.8}
        MDLabel:
            text:"GLASSY SIGNUP"
            font_size:"22sp"
            color: 120/255,120/255,120/255,1
            pos_hint:{"center_x": .6,"center_y":.7}

        MDFloatLayout:
            size_hint: .79,.08
            pos_hint:{"center_x":.5,"center_y":.52}

            MDLabel:
                text:"Username"
                font_size:"14sp"
                pos_hint:{"center_x": .6,"center_y":.9}

            TextInput: 
                id:username_s
                size_hint_y: .75
                pos_hint:{"center_x": .45,"center_y":.4}
                background_color:0,0,0,0
                cursor_color:0,0,0,1
                cursor_width: "2sp"
                foreground_color: 120/255,120/255,120/255,1
                font_size:"17sp"
                multiline: False
            Image:
                source:"Glassy/resources/profile.png"
                pos_hint:{"center_x": .96,"center_y":.5}
                size_hint: .5,.5
            MDFloatLayout:
                pos_hint:{"center_x": .5,"center_y":0}
                size_hint_y:.03
                md_bg_color:120/255,120/255,120/255,1
        #password
        MDFloatLayout:
            size_hint: .79,.08
            pos_hint:{"center_x":.5,"center_y":.4}

            MDLabel:
                text:"Password"
                font_size:"14sp"
                pos_hint:{"center_x": .6,"center_y":.9}

            TextInput:
                id:password_s 
                size_hint_y: .75
                pos_hint:{"center_x": .45,"center_y":.4}
                background_color:0,0,0,0
                cursor_color:0,0,0,1
                cursor_width: "2sp"
                foreground_color: 120/255,120/255,120/255,1
                font_size:"17sp"
                multiline: False
                password:True
            Image:
                source:"Glassy/resources/key.png"
                pos_hint:{"center_x": .96,"center_y":.5}
                size_hint: .4,.4
            MDFloatLayout:
                pos_hint:{"center_x": .5,"center_y":0}
                size_hint_y:.03
                md_bg_color:120/255,120/255,120/255,1

        #confirm password
        MDFloatLayout:
            size_hint: .79,.08
            pos_hint:{"center_x":.5,"center_y":.28}

            MDLabel:
                text:"Confirm Password"
                font_size:"14sp"
                pos_hint:{"center_x": .6,"center_y":.9}

            TextInput: 
                id:password_s_conf
                size_hint_y: .75
                pos_hint:{"center_x": .45,"center_y":.4}
                background_color:0,0,0,0
                cursor_color:0,0,0,1
                cursor_width: "2sp"
                foreground_color: 120/255,120/255,120/255,1
                font_size:"17sp"
                multiline: False
                password:True
            Image:
                source:"Glassy/resources/key.png"
                pos_hint:{"center_x": .96,"center_y":.5}
                size_hint: .4,.4
            MDFloatLayout:
                pos_hint:{"center_x": .5,"center_y":0}
                size_hint_y:.03
                md_bg_color:120/255,120/255,120/255,1

        MDRectangleFlatButton:
            text:"SignUp"
            font_size:"13sp"
            pos_hint:{"center_x": .5,"center_y":.15}
            halign:"center"
            color:120/255,120/255,120/255,1
            on_press:app.signup_method()