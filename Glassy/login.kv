MDScreen:
    name:'login'
    id:login
    MDFloatLayout:
        md_bg_color:1,1,1,1
        MDIconButton:
            icon:"chevron-left"
            user_font_size:"35sp"
            pos_hint:{"center_y": .95}
        MDLabel:
            text:"Back"
            font_size:"18sp"
            #font_name:"Poppins.Regular.ttf"
            pos_hint:{"center_x": .615,"center_y":.949}
        Image:
            source:"Glassy/resources/glassy_log.png"
            size_hint: .26, .26
            pos_hint:{"center_x": .22,"center_y":.8}
        MDLabel:
            text:"GLASSY LOGIN"
            font_size:"22sp"
            color: 120/255,120/255,120/255,1
            pos_hint:{"center_x": .6,"center_y":.7}

        MDTextButton:
            text:"No account! SignUp"
            font_size:"13sp"
            pos_hint:{"center_x": .8,"center_y":.6}
            halign:"center"
            color:120/255,120/255,120/255,1
            on_press:app.root.current="signup"

        MDFloatLayout:
            size_hint: .79,.08
            pos_hint:{"center_x":.5,"center_y":.42}

            MDLabel:
                text:"Username"
                font_size:"14sp"
                pos_hint:{"center_x": .6,"center_y":.9}

            TextInput: 
                id:username_input
                size_hint_y: .75
                pos_hint:{"center_x": .45,"center_y":.4}
                background_color:0,0,0,0
                cursor_color:0,0,0,1
                cursor_width: "2sp"
                foreground_color: 120/255,120/255,120/255,1
                font_size:"17sp"
                multiline: False
            Image:
                source:"Glassy/resources/profile.png"
                pos_hint:{"center_x": .96,"center_y":.5}
                size_hint: .5,.5
            MDFloatLayout:
                pos_hint:{"center_x": .5,"center_y":0}
                size_hint_y:.03
                md_bg_color:120/255,120/255,120/255,1
        #password
        MDFloatLayout:
            size_hint: .79,.08
            pos_hint:{"center_x":.5,"center_y":.28}

            MDLabel:
                text:"Password"
                font_size:"14sp"
                pos_hint:{"center_x": .6,"center_y":.9}

            TextInput: 
                id:pass_input
                size_hint_y: .75
                pos_hint:{"center_x": .45,"center_y":.4}
                background_color:0,0,0,0
                cursor_color:0,0,0,1
                cursor_width: "2sp"
                foreground_color: 120/255,120/255,120/255,1
                font_size:"17sp"
                multiline: False
                password:True
            Image:
                source:"Glassy/resources/key.png"
                pos_hint:{"center_x": .96,"center_y":.5}
                size_hint: .4,.4
            MDFloatLayout:
                pos_hint:{"center_x": .5,"center_y":0}
                size_hint_y:.03
                md_bg_color:120/255,120/255,120/255,1
        #login btn
        Button:
            text:"Login"
            background_color:0,0,0,0
            size_hint: .79,.08
            pos_hint:{"center_x": .5,"center_y":.15}
            on_press:app.login_method() 
            canvas.before:
                Color:
                    rgb:226/255,0,48/255,1
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[2]
        MDTextButton:
            text:"Forgot Password"
            font_size:"13sp"
            pos_hint:{"center_x": .8,"center_y":.07}
            halign:"center"
            color:120/255,120/255,120/255,1

            



        